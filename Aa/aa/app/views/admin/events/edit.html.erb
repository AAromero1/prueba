<h1>Editar Evento</h1>

<%= form_with(model: [:admin, @event], local: true) do |form| %>

  <div class="field">
    <%= form.label :Deporte %>
    <%= form.select :sport, ['FÃºtbol', 'Padel', 'Basquetbol', 'Tenis', 'Tenis dobles'], include_blank: true %>
